{% extends 'layout' %}

{% block bodyclass %}register{% endblock %}

{% block content %}
    <div class="row top-buffer">
        <h2 class="text-center">Register</h2>
    </div>

    <div class="row col-md-4 col-md-offset-4">
        <form action="" id="registration-form">
            <div class="form-group">
                <label for="username">Username:</label>
                <input type="text" id="username" class="form-control" value="" placeholder="Username" />
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" id="password" class="form-control" placeholder="Password" />
            </div>

            <div class="form-group">
                <input type="submit" value="Sign Up" class="form-control" /><br />

                <span class="white-text">
                    <br />You can download <a href="#">this batch file</a>
                    <br />(Be sure to change the username and password in the file to what you registered with)
                    <br />or add ac.aka-steve.com:9000 to your ThwargLauncher ACEServerList.xml file.
                </span>
            </div>
        </form>
    </div>
{% endblock %}