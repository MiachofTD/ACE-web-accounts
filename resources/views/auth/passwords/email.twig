{% extends 'layout' %}

{% block bodyclass %}auth password{% endblock %}

{% block content %}
    <div class="row top-buffer">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>Forgot Password  <img src="{{ public_asset( 'img/logoshaded.png' ) }}" height="45" alt="ACEmulator Logo" class="pull-right" /></h2>

                    <form action="{{ route( 'password.email' ) }}" method="POST">
                        <div class="form-group">
                            <label for="email">E-mail Address</label>
                            <input type="text" name="email" id="email" required value="{{ old( 'email' ) }}" class="form-control" />
                        </div>

                        <div class="form-group">
                            {{ csrf_field() }}
                            <input type="submit" value="Send Password Reset Link" class="form-control btn btn-primary" />
                        </div>

                        <div class="form-group">
                            <strong><a href="{{ route( 'auth.login' ) }}">Login</a></strong><br />
                            <strong>Don't have an account? <a href="{{ route( 'auth.register' ) }}"> Click here</a></strong>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
