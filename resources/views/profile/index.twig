{% extends 'layout' %}

{% block title %}My Profile{% endblock %}

{% block content %}
    <div class="row top-buffer">
        <div class="col-md-12">
            <div class="panel panel-default">
                <div class="panel-body">
                    <h2>My Profile</h2>

                    <form action="{{ route( 'profile.index' ) }}" method="POST" id="profile-form">
                        <div class="form-group">
                            <label for="account">Account Name:</label>
                            <input type="text" name="accountId" id="account" class="form-control" value="{{ auth_user().accountId }}" disabled />
                        </div>

                        <hr />

                        <div class="form-group">
                            <label for="password">New Password:</label>
                            <input type="password" name="password" id="password" class="form-control" placeholder="New Password" />
                        </div>

                        <div class="form-group">
                            <label for="confirm-password">Confirm New Password:</label>
                            <input type="password" name="password_confirmation" id="confirm-password" class="form-control" placeholder="Confirm New Password" />
                        </div>

                        <div class="form-group">
                            {{ csrf_field() }}
                            <input type="submit" value="Update Profile" class="form-control btn btn-primary" /><br /><br />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
